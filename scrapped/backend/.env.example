# Flask Configuration
FLASK_SECRET_KEY=generate-a-secure-random-key
FLASK_ENV=development  # Change to 'production' in production
FLASK_APP=src/app.py
FLASK_DEBUG=1  # Set to 0 in production
SESSION_COOKIE_SECURE=false  # Set to true in production
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
SESSION_TYPE=filesystem

# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback  # Update for production
GOOGLE_OAUTH_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_OAUTH_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_OAUTH_SCOPES="email profile https://www.googleapis.com/auth/calendar"

# GCP Configuration
GCP_BIGQUERY_DS=your-project.dataset
GCP_PROJECT_ID=your-project-id
GCP_PROJECT_NUMBER=your-project-number
GCP_BUCKET_NAME=your-bucket-name
GCP_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GCP_SERVICE_ACCOUNT_KEY_PATH=/path/to/service-account-key.json
GOOGLE_ANALYTICS_PROPERTY_ID=your-property-id
VERTEX_AI_AGENT=your-agent-name
VERTEX_AI_ID=your-vertex-ai-id
VERTEX_AI_SLACK_WEBHOOK=your-webhook-url

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=your-publishable-key
STRIPE_SECRET_KEY=your-secret-key
STRIPE_WEBHOOK_SECRET=your-webhook-secret
STRIPE_API_VERSION=2023-10-16  # Update to latest version as needed

# Stripe Product/Price IDs
STRIPE_PRICE_WEEKLY_LIVE=price_weekly_live
STRIPE_PRICE_MONTHLY_OFFICE=price_monthly_office
STRIPE_PRICE_APP_ACCESS=price_app_access

# Webhook Configuration
WEBHOOK_HOST=your-webhook-host  # e.g., https://your-domain.com
WEBHOOK_SECRET=your-webhook-secret-key

# Security Configuration
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
RATE_LIMIT_DEFAULT=100/hour
RATE_LIMIT_AUTH=20/minute
JWT_SECRET_KEY=generate-a-different-secure-key
JWT_ACCESS_TOKEN_EXPIRES=1d  # 1 day

# Logging Configuration
LOG_LEVEL=INFO  # Set to DEBUG for development
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=app.log

# Note: Replace all placeholder values with your actual credentials
# To generate secure keys:
# - Flask secret key: python -c 'import secrets; print(secrets.token_hex(32))'
# - JWT secret key: python -c 'import secrets; print(secrets.token_urlsafe(32))'
# - Webhook secret: python -c 'import secrets; print(secrets.token_urlsafe(32))'

# Development vs Production:
# - Update FLASK_ENV, DEBUG, and security settings for production
# - Use HTTPS URLs and secure cookie settings in production
# - Set appropriate CORS origins for your domains
# - Configure proper logging in production environment
